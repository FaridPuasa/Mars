<div id="Profile" class="tabcontent">
                        
    <h3>Profile</h3>
    <form id ="profileupdate" action = "/profileupdate" method="POST">

        
        <div class="row">
            <div class="col leftcolumn">
                <table class="table table-striped table-sm">
                    <tr>
                        <th scope="row"></th>
                        <td>Name:</td>
                        <td><input type="text" name="name" size="30" value="<%=username.name%>"/></td>
                    </tr>
                    <tr>
                        <th scope="row"></th>
                        <td>Email: </td>
                        <td><input type="text" name="email" size="30" value="<%=username.email%>" readonly/></td>
                    </tr>
                    <tr>
                        <th scope="row"></th>
                        <td>Address: </td>
                        <td><textarea type="text" name="address" rows="3" cols="60"><%=username.address%></textarea></td>
                    </tr>
                    <tr>
                        <th scope="row"></th>
                        <td>Phone Number: </td>
                        <td><input type="text" name="phone" size="30" value="<%=username.phone %>"/></td>
                    </tr>
                    <tr>
                        <th scope="row"></th>
                        <td>ID Type: </td>
                        <td>
                            <select name="idType">
                                <option value="IC">IC</option>
                                <option value="PP">PP</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row"></th>
                        <td>IC Number: </td>
                        <td><input type="text" name="icNo" size="30" value="<%=username.icNo %>"/></td>
                    </tr>
                    <tr>
                        <th scope="row"></th>
                        <td>IC Color: </td>
                        <td><input type="text" name="icColor" size="30" value="<%=username.icColor %>"/></td>
                    </tr>
                    <tr>
                        <th scope="row"></th>
                        <td>Vehicle Registration: </td>
                        <td><input type="text" name="registration" size="30" value="<%=username.registration%>"/></td>
                    </tr>
                    <tr>
                        <th scope="row"></th>
                        <td>Post Code: </td>
                        <td><input type="text" name="postcode" size="30" value="<%=username.postcode%>"/></td>
                    </tr>
                    <tr>
                        <th scope="row"></th>
                        <td>Designation: </td>
                        <td><input type="text" name="designation" size="30" value="<%=username.designation%>"/></td>
                    </tr>

                </table>
                <button type="submit" class="text-right" style="float: right; padding-left:20px; padding-right: 20px">Update</button>
            </div>
        </div>
    </form>
  
  
</div>

