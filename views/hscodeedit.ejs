<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
<link rel="stylesheet" href="stylesheet/style.css">

<title>Edit HSCode</title>

<head>
  <%- include('partials/dashboard'); %>
</head>

<div class = "container3" style ="margin-left: 100px; margin-right: 100px">
  <h1>Add HSCode</h1>
  <form action="/addhscode" method="POST">
  
    <div class="row">
      <div class="col leftcolumn">
        <table class="table table-striped table-bordered table-sm">
          <thead>
            <tr>
                <th scope="col">Heading</th>
                <th scope="col">HSCode</th>
                <th scope="col">Description</th>
                <th scope="col">Category</th>
                <th scope="col">Sub-Category</th>
                <th scope="col">Sub-Category2</th>
                <th scope="col">Sub-Category3</th>
                <th scope="col">Unit of Quantity</th>
                <th scope="col">Rate of Import Duty</th>
                <th scope="col">Rate of Excise Duty</th>
            </tr>
          </thead>
          <tbody>
            <tr>
                <th scope="row"><input type="text" id="goodsDescription" name="heading" size="15"/></th>
                <td><input type="text" name="hscodeentry" size="20"/></td>
                <td><textarea id="descriptionname" name="name" rows="2" cols="30"></textarea></td>
                
                <td><input type="text" name="cat1" size="10"/></td>
                <td><input type="text" name="cat2" size="10"/></td>
                <td><input type="text" name="cat3" size="10"/></td>
                <td><input type="text" name="cat4" size="10"/></td>
                <td><input type="text" name="unitOfQuantity" size="5"/></td>
                <td><input type="text" name="rateOfImportDuty" size="5"/></td>
                <td><input type="text" name="rateOfExciseDuty" size="5"/></td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>

  <button type="submit">Submit</button>
</form>

<a href="/hscode">Return</a>


</div>

<footer>
  <%- include('partials/footer'); %>
</footer>