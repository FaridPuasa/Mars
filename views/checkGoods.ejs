<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
<link rel="stylesheet" href="stylesheet/style.css">

<title>Check Goods</title>

<head>
    <%- include('partials/dashboard'); %>
</head>


<body>
    <div id="CheckGoods">
        <br>
        
        <form id ="checkGoods" action="/checkGoods" method="POST">
            
            <div class="checkGoodsPage">
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-6">
                    <h3>Check Goods</h3>
                    <table class="table table-striped table-sm">
                        <tr>
                            <th scope="row"></th>
                            <td>Invoice No:</td>
                            <td><input type="text" id="invoiceNo" name="invoiceNo" size="30"/></td>
                            
                            <td><button type="submit" formaction="/checkGoods" method="POST" class="btn btn-light"><i class="bi bi-search" name="thisbutton" value="submitCheck"></i> SEARCH</button></td>
                        </tr>
                    </table>
                    
                </div>
                <div class="col-md-3">
                </div>
            </div>
            <!--row2-->
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-6">
                    <h3>Check Goods</h3>
                    <table class="table table-striped table-sm">
                        
                        <tr>
                            
                            <% if (typeof currentInvoice !== "undefined") { %>
                                <th scope="row"></th>
                                <td>Invoice No:</td>
                                <td><input type="text" id="currentSearchedInvoice" name="currentSearchedInvoice" value='<%=currentInvoice %>' readonly/><button type="submit" method="POST" formaction="/checkGoodsXML" class="btn btn-light" style="float:right; margin-right: 50px;"><i class="bi bi-download"></i> DOWNLOAD</button></td>
                                
                            <% } %>
                        </tr>
                        <tr style="background-color: black;">
                            <th scope="row"></th>
                        </tr>
                        <% for (var i = 0; i<goods.length; i++) { %>
                            <% if (goods[i].invoiceNo == currentInvoice) { %>
                                
                                <tr>
                                    <th scope="row"></th>
                                    <td>Serial No:</td>
                                    <td><%= goods[i].goodsSerialNo %></td>
                                </tr>
                                <tr>
                                    <th scope="row"></th>
                                    <td>Description:</td>
                                    <td><%= goods[i].goodsDescription %></td>
                                </tr>
                                <tr>
                                    <th scope="row"></th>
                                    <td>HS Code:</td>
                                    <td><%= goods[i].goodsHSCode %></td>
                                </tr>
                                <tr>
                                    <th scope="row"></th>
                                    <td>Shipping Mark:</td>
                                    <td><%= goods[i].shippingMarks %></td>
                                </tr>
                                <tr style="background-color: black;">
                                    <th scope="row"></th>
                                </tr>




                            <% } %>
                        <% } %>
                    </table>
                    
                </div>
                <div class="col-md-3">
                </div>
            </div>
            </div>
        </form>
      
      
    </div>
</body>
<footer>
    <%- include('partials/footer'); %>
</footer>

