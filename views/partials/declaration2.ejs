<script>
    //Page function
    var currentDec2Page = 0; // Current page is set to be the first page (0)
    showDec2Page(currentDec2Page); // Display the current page
    
    function showDec2Page(nd) {
        // This function will display the specified page of the form ...
        var jd = document.getElementsByClassName("declaration2Page");
        jd[nd].style.display = "block";
        // ... and fix the Previous/Next buttons:
        if (nd == 0) {
            document.getElementById("prevDec2Btn").style.display = "none";
        } else {
            document.getElementById("prevDec2Btn").style.display = "inline";
        }
        if (nd == (jd.length - 1)) {
            document.getElementById("nextDec2Btn").innerHTML = "Submit";
        } else {
            document.getElementById("nextDec2Btn").innerHTML = "Next";
        }

    }

    

    function nextDec2Prev(nd) {
        // This function will figure out which page to display
        var jd = document.getElementsByClassName("declaration2Page");
        // Exit the function if any field in the current page is invalid:
        //if (n == 1 && !validateForm()) return false;
        // Hide the current tab:
        jd[currentDec2Page].style.display = "none";
        // Increase or decrease the current page by 1:
        currentDec2Page = currentDec2Page + nd;
        // if you have reached the end of the form... :
        if (currentDec2Page == jd.length) {
            //...the form gets submitted:
            document.getElementById("declaration2").submit();
            document.getElementById("nextDec2Btn").innerHTML = "Return to Home Page";
            document.getElementById("declaration2").action = "/";
            //return false;
            if (document.getElementById("nextDec2Btn").innerHTML == "Return to Home Page"){
                setTimeout(function(){
                    document.getElementById("declaration2").action = "/";
                    document.getElementById("declaration2").submit();
                },3000);
                
            }
        }
        if (currentDec2Page > jd.length) {
            //...the form gets submitted:
            //document.getElementById("nextBtn").innerHTML = "Return to Home Page";
            document.getElementById("declaration2").action = "/";
            document.getElementById("declaration2").submit();
            
            return "/";
        }
        // Otherwise, display the correct page:
        showDec2Page(currentDec2Page);
        
    }

    
</script>